mpirun_rsh -np 1 -hostfile $PBS_NODEFILE MV2_CPU_MAPPING=0-7:8-15 OMP_NUM_THREADS=8 ./run.gordon.reference   6  4 4 4  1 1 1
mpirun_rsh -np 1 -hostfile $PBS_NODEFILE MV2_CPU_MAPPING=0-7:8-15 OMP_NUM_THREADS=8 ./run.gordon.fusion  6  4 4 4  1 1 1
mpirun_rsh -np 1 -hostfile $PBS_NODEFILE MV2_CPU_MAPPING=0-7:8-15 OMP_NUM_THREADS=8 ./run.gordon.sse     6  4 4 4  1 1 1
