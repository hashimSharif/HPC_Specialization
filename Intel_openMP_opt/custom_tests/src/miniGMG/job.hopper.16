#!/bin/sh
#PBS -N CommunicationAvoidingMultiGrid
#PBS -o results.hopper.16
#PBS -q regular
#PBS -j oe
#PBS -l walltime=1:00:00
#PBS -l mppwidth=24576

set -x
cd $PBS_O_WORKDIR
module swap PrgEnv-pgi PrgEnv-intel

export OMP_NUM_THREADS=6
#export OMP_WAIT_POLICY=active
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.reference   7  2 2 2  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.fusion  7  2 2 2  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.sse     7  2 2 2  16 16 16

aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.reference   6  4 4 4  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.fusion  6  4 4 4  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.sse     6  4 4 4  16 16 16

aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.reference   5  8 8 8  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.fusion  5  8 8 8  16 16 16
aprun -n 4096  -d  6  -N  4  -S 1  -ss  -cc numa_node ./run.hopper.sse     5  8 8 8  16 16 16
